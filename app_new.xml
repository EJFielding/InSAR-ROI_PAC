<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="srtmdem">
  <jobTemplates>
  <jobTemplate id="dem">
      <executable type="streaming">/application/dem/run.sh</executable>
      <defaultParameters>
        <parameter id="dem_access_point">http://10.16.10.23:8080/wps/WebProcessingService</parameter>
      </defaultParameters>
      <defaultJobconf>
        <property id="mapred.task.timeout">9900000000</property>
	<property id="ciop.job.max.tasks">1</property>	      
</defaultJobconf>
    </jobTemplate>
    <jobTemplate id="roipac">
      <executable type="streaming">/application/roipac/run.sh</executable>
      <defaultParameters>
      </defaultParameters>
      <defaultJobconf>
        <property id="mapred.task.timeout">990000000000000</property>
        <property id="ciop.job.max.tasks">1</property>
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
  <workflow id="roi_pac" title="ROI_PAC on a sandbox" version="1.0">
    <abstract>This application invokes ROI_PAC on Envisat ASAR data</abstract>
    <node id="node_dem">
      <job href="#dem"/>
      <sources>
        <source id="dataset" type="string:list" title="ASAR product catalogue entry in RDF format" scope="runtime">
        <abstract>Define the list of two ASAR products to generate a DEM for each input product. The products are passed by references to catalogue entries in RDF format</abstract>
        <value>http://catalogue.terradue.int/catalogue/search/ASA_IM__0P/ASA_IM__0CNPDE20100502_175016_000000172089_00084_42723_0354.N1/rdf,http://catalogue.terradue.int/catalogue/search/ASA_IM__0P/ASA_IM__0CNPDE20100328_175019_000000162088_00084_42222_9504.N1/rdf</value>
        </source>
      </sources>
      <parameters/>
    </node>
    <node id="node_roipac">
      <job href="#roipac" />
      <sources>
        <source type="wf:node" href="#node_dem"/>
      </sources>
      <parameters/>
    </node>
  </workflow>
</application>
